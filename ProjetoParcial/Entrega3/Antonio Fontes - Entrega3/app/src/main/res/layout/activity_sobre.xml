<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Logo da UTFPR -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/utfpr_logo"
        android:contentDescription="Logo da UTFPR"
        android:layout_marginBottom="24dp" />

    <!-- Descrição do app -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicativo desenvolvido para auxiliar no controle de hábitos diários."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <!-- Nome do aluno -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Antonio Marcos Fontes Darienço\nCurso:Engenharia da Computação"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!-- E-mail -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="antoniod@alunos.utfpr.edu.br"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
