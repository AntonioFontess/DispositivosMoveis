<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Habitos1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores principais (modo escuro) -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryContainer</item>

        <!-- Fundo e superfície -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

</resources>
